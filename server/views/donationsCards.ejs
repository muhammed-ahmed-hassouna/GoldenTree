<!-- donationForm.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>In-Kind Donations</title>
    <!-- Add any additional styles or scripts as needed -->
    <style>
        /* Add your CSS styles for the cards here */
        .card {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <h1>All In-Kind Donations</h1>

    <% inKindDonations.forEach((donation) => { %>
        <div class="card">
            <h2><%= donation.item_type %></h2>
            <p><strong>Donor Type:</strong> <%= donation.donor_type %></p>
            <p><strong>Description:</strong> <%= donation.description %></p>
            <p><strong>Timestamp:</strong> <%= donation.timestamp %></p>
            <p><strong>Status:</strong> <%= donation.status %></p>
            <!-- Add more details as needed -->

            <!-- Add links or buttons for additional actions if necessary -->
        </div>
    <% }) %>
</body>
</html>
